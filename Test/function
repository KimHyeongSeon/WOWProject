void PrintHello(void){ printf("Hello World\n");}void PrintLine(void){ int i; for(i=0;i<20;i++)  printf("-"); printf("\n");}int _tmain(int argc, _TCHAR* argv[]){ PrintLine(); PrintHello(); PrintLine(); system("pause"); return 0;}void PrintSumAndProduct(int a, int b){ printf("%d+%d=%d\n", a, b, a+b); printf("%d*%d=%d\n", a, b, a*b);}int _tmain(int argc, _TCHAR* argv[]){ int x, y; PrintSumAndProduct(10, 20); printf("정수를 입력하세요 :"); scanf("%d %d", &x, &y); PrintSumAndProduct(x, y); system("pause"); return 0;}
